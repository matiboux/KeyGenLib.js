{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["jest", "node"],
    "baseUrl": ".",
    "paths": {
      "/*": ["./*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
